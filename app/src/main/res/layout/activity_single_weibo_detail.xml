<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:focusable="true"
    tools:context="com.newer.newerblogging.activity.SingleWeiboDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/item_micro_single" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_top_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ptrlv_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/ic_top_line"
            android:dividerHeight="3dp"
            android:focusable="false" />
    </LinearLayout>
</ScrollView>